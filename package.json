{
  "name": "node-ts-starter-template",
  "version": "1.0.0",
  "description": "Node.js + TypeScript starter template",
  "engines": {
    "node": ">= 18.x"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "jest",
    "github-actions"
  ],
  "homepage": "https://github.com/hanstanawi/node-ts-starter-template",
  "bugs": {
    "url": "https://github.com/hanstanawi/node-ts-starter-template/issues",
    "email": "hans.tanawi@outlook.com"
  },
  "license": "MIT",
  "repository": "github:hanstanawi/node-ts-starter-template",
  "author": "Hans Tanawi <hans.tanawi@outlook.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "dev": "nodemon",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:types": "tsc --noEmit",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.9.1",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
