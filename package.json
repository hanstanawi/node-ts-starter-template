{
  "name": "node-ts-starter-template",
  "version": "1.0.0",
  "description": "Node.js + TypeScript starter template",
  "engines": {
    "node": ">= 18.x"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "jest",
    "github-actions"
  ],
  "homepage": "https://github.com/hanstanawi/node-ts-starter-template",
  "bugs": {
    "url": "https://github.com/hanstanawi/node-ts-starter-template/issues",
    "email": "hans.tanawi@outlook.com"
  },
  "license": "MIT",
  "repository": "github:hanstanawi/node-ts-starter-template",
  "author": "Hans Tanawi <hans.tanawi@outlook.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "dev": "tsx watch src",
    "docs": "typedoc src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:types": "tsc --noEmit",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.4"
  }
}
