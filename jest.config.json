{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
